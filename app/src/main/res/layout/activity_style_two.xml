<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rv_style_two_top_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TabDemo"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/iv_style_two_menu"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:src="@drawable/menu"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_style_two"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#f5f5f5">

        <RelativeLayout
            android:id="@+id/rv_style_two_tab_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp">

                <View
                    android:id="@+id/view_style_two_tab_one_red_point"
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:background="@drawable/shape_red_point"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"/>

                <ImageView
                    android:id="@+id/iv_style_two_tab_one"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/selector_tab_icon" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_style_two_tab_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:text="标签1"
                android:textColor="@color/selector_color"
                android:layout_marginBottom="8dp"
                android:textSize="12sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rv_style_two_tab_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/iv_style_two_tab_two"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/selector_tab_icon" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_style_two_tab_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:text="标签2"
                android:textColor="@color/selector_color"
                android:layout_marginBottom="8dp"
                android:textSize="12sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rv_style_two_tab_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/iv_style_two_tab_three"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/selector_tab_icon" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_style_two_tab_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:text="标签3"
                android:textColor="@color/selector_color"
                android:layout_marginBottom="8dp"
                android:textSize="12sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rv_style_two_tab_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/iv_style_two_tab_four"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/selector_tab_icon" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_style_two_tab_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:text="标签4"
                android:textColor="@color/selector_color"
                android:layout_marginBottom="8dp"
                android:textSize="12sp"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>